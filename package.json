{
  "devDependencies": {
    "chokidar-cli": "^1.2.1",
    "prettier-standard": "^9.1.1",
    "standard": "^12.0.1"
  },
  "scripts": {
    "copy": "rm -rf ~/Library/Application\\ Support/com.bohemiancoding.sketch3/Plugins/Extract\\ Text.sketchplugin && cp -R ./Extract\\ Text.sketchplugin ~/Library/Application\\ Support/com.bohemiancoding.sketch3/Plugins",
    "fix": "prettier-standard '*.sketchplugin/**/*.js'",
    "lint": "standard '*.sketchplugin/**/*.js'",
    "watch": "chokidar '*.sketchplugin/**/*' --command 'yarn copy' --initial"
  },
  "standard": {
    "globals": [
      "CGSizeMake",
      "COSAlertWindow",
      "NSButtonCell",
      "NSRadioButton",
      "NSMatrix",
      "NSRadioModeMatrix",
      "MSLayerGroup",
      "NSMakeRect",
      "NSPasteboard",
      "NSStringPboardType",
      "NSTextField",
      "MSTextLayer",
      "NSUserDefaults",
      "NSView"
    ]
  }
}
